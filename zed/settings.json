// Zed settings
//
// author = byteme
{
    "diagnostics": {
        "lsp_pull_diagnostics": {
            "enabled": true,
        },
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": false,
    },
    "disable_ai": true,

    "project_name": null,

    "theme": {
        "mode": "system",
        "light": "Tokyo Night Light",
        "dark": "Tokyo Night",
    },
    "icon_theme": "Material Icon Theme",

    "buffer_font_family": "JetBrains Mono",
    "buffer_font_fallbacks": null,
    "buffer_font_size": 13,
    "buffer_line_height": {
        "custom": 1.5,
    },
    "buffer_font_features": {
        "calt": false,
    },
    "buffer_font_weight": 300,

    "ui_font_family": "SF Pro Display",
    "ui_font_fallbacks": null,
    "ui_font_size": 16,
    "ui_font_weight": 500,

    "terminal": {
        "font_family": "Liga SFMono Nerd Font",
        "font_size": 11,
    },

    "base_keymap": "JetBrains",

    "features": {
        "edit_prediction_provider": "zed",
    },

    "active_pane_modifiers": {
        "border_size": 0.0,
        "inactive_opacity": 1.0,
    },

    "bottom_dock_layout": "contained",
    "pane_split_direction_horizontal": "down",
    "pane_split_direction_vertical": "right",

    "centered_layout": {
        "left_padding": 0.2,
        "right_padding": 0.2,
    },

    "image_viewer": {
        "unit": "binary",
    },

    "hover_popover_enabled": true,
    "hover_popover_delay": 300,
    "confirm_quit": false,

    "restore_on_startup": "none",
    "close_on_file_delete": true,
    "when_closing_with_no_tabs": "platform_default",
    "on_last_window_closed": "quit_app",
    "window_decorations": "client",
    "use_system_path_prompts": true,
    "use_system_prompts": true,
    "cursor_blink": true,
    "cursor_shape": "bar",

    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false,
        "selections_menu": false,
        "agent_review": false,
        "code_actions": false,
    },

    "title_bar": {
        "show_branch_icon": true,
        "show_branch_name": true,
        "show_project_items": true,
        "show_onboarding_banner": false,
        "show_user_picture": true,
        "show_sign_in": false,
        "show_menus": false,
    },

    "scrollbar": {
        "show": "never",
        "cursors": false,
        "git_diff": false,
        "search_results": false,
        "selected_symbol": false,
        "diagnostics": "all",
    },

    "minimap": {
        "show": "never",
    },

    "gutter": {
        "line_numbers": true,
        "runnables": true,
        "breakpoints": true,
        "min_line_number_digits": 4,
    },

    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "active_line_width": 1,
        "coloring": "indent_aware",
    },

    "search": {
        "button": false,
    },
    "use_smartcase_search": true,

    "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_value_hints": true,
        "show_other_hints": true,
        "show_background": false,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50,
        "toggle_on_modifiers_press": {
            "control": false,
            "shift": false,
            "alt": false,
            "platform": false,
            "function": false,
        },
    },

    "resize_all_panels_in_dock": ["left"],

    "project_panel": {
        "button": true,
        "hide_gitignore": false,
        "default_width": 240,
        "dock": "left",
        "entry_spacing": "standard",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "starts_open": true,
        "auto_fold_dirs": false,
        "scrollbar": {
            "show": null,
        },
        "show_diagnostics": "all",
        "sticky_scroll": true,
        "indent_guides": {
            "show": "always",
        },
        "sort_mode": "directories_first",
        "drag_and_drop": true,
        "hide_root": false,
        "hide_hidden": false,
        "auto_open": {
            "on_create": true,
            "on_paste": true,
            "on_drop": true,
        },
    },
    "outline_panel": {
        "button": false,
        "default_width": 240,
        "dock": "left",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "indent_guides": {
            "show": "always",
        },
        "scrollbar": {
            "show": null,
        },
        "expand_outlines_with_depth": 100,
    },

    "collaboration_panel": {
        "button": false,
        "dock": "left",
        "default_width": 240,
    },

    "use_system_window_tabs": false,

    "tabs": {
        "git_status": true,
        "close_position": "right",
        "file_icons": true,
        "show_close_button": "hover",
        "activate_on_close": "history",
        "show_diagnostics": "off",
    },

    "file_finder": {
        "file_icons": true,
        "modal_max_width": "small",
        "skip_focus_for_active_in_search": true,
        "git_status": true,
        "include_ignored": "smart",
    },

    "git": {
        "git_gutter": "tracked_files",
        "gutter_debounce": 0,
        "inline_blame": {
            "enabled": true,
            "delay_ms": 0,
            "padding": 7,
            "show_commit_summary": false,
            "min_column": 0,
        },
        "blame": {
            "show_avatar": true,
        },
        "hunk_style": "staged_hollow",
        "path_style": "file_name_first",
    },

    "git_panel": {
        "button": true,
        "dock": "left",
        "default_width": 240,
        "status_style": "label_color",
        "fallback_branch_name": "main",
        "sort_by_path": false,
        "collapse_untracked_diff": false,
        "scrollbar": {
            "show": null,
        },
    },

    "message_editor": {
        "auto_replace_emoji_shortcode": true,
    },

    "notification_panel": {
        "button": false,
        "dock": "right",
        "default_width": 240,
    },

    "agent": {
        "enabled": false,
        "preferred_completion_mode": "normal",
        "button": true,
        "dock": "right",
        "default_width": 640,
        "default_height": 320,
        "default_view": "thread",
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4",
        },
        "model_parameters": [],
        "always_allow_tool_actions": false,
        "single_file_review": true,
        "enable_feedback": true,
        "default_profile": "write",
        "profiles": {
            "write": {
                "name": "Write",
                "enable_all_context_servers": true,
                "tools": {
                    "copy_path": true,
                    "create_directory": true,
                    "delete_path": true,
                    "diagnostics": true,
                    "edit_file": true,
                    "fetch": true,
                    "list_directory": true,
                    "project_notifications": false,
                    "move_path": true,
                    "now": true,
                    "find_path": true,
                    "read_file": true,
                    "open": true,
                    "grep": true,
                    "terminal": true,
                    "thinking": true,
                    "web_search": true,
                },
            },
            "ask": {
                "name": "Ask",
                "tools": {
                    "diagnostics": true,
                    "fetch": true,
                    "list_directory": true,
                    "project_notifications": false,
                    "now": true,
                    "find_path": true,
                    "read_file": true,
                    "open": true,
                    "grep": true,
                    "thinking": true,
                    "web_search": true,
                },
            },
            "minimal": {
                "name": "Minimal",
                "enable_all_context_servers": false,
                "tools": {},
            },
        },
        "notify_when_agent_waiting": "primary_screen",
        "play_sound_when_agent_done": false,
        "expand_edit_card": true,
        "expand_terminal_card": true,
        "use_modifier_to_send": false,
        "message_editor_min_lines": 4,
    },

    "enable_language_server": true,
    "autosave": "off",
    "remove_trailing_whitespace_on_save": true,

    "max_tabs": null,
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false,
        "show_tab_bar_buttons": false,
    },

    "current_line_highlight": "all",
    "format_on_save": "on",
    "formatter": "auto",
    "soft_wrap": "none",
    "tab_size": 4,
    "hard_tabs": false,
    "unnecessary_code_fade": 0.3,
    "snippet_sort_order": "inline",
    "selection_highlight": true,
    "rounded_selection": true,
    "lsp_highlight_debounce": 75,
    "minimum_contrast_for_highlights": 50,

    "lsp_document_colors": "inlay",
    "show_completion_documentation": true,
    "show_completions_on_input": true,
    "completion_menu_scrollbar": "auto",
    "colorize_brackets": true,
    "inline_code_actions": true,

    "drag_and_drop_selection": {
        "enabled": true,
        "delay": 300,
    },

    "go_to_definition_fallback": "find_all_references",
    "diagnostics_max_severity": "all",
    "show_wrap_guides": false,
    "use_autoclose": true,
    "use_auto_surround": true,
    "auto_indent": true,
    "auto_indent_on_paste": true,
    "always_treat_brackets_as_autoclosed": true,
    "show_edit_predictions": true,

    "languages": {
        "LaTeX": {
            "tab_size": 2,
        },
    },

    "jupyter": {
        "enabled": true,
        "kernel_selections": {},
    },
}
